<?xml version='1.0' encoding='UTF-8'?>
<configuration>
    <property name="logFile" value="logs/galois"/>
    <property name="maxFileSize" value="30MB"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{50} -[%file:%line]- %msg%n</pattern>
            <charset>
                UTF-8
            </charset>
        </encoder>
    </appender>

    <appender name="fileLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            ${logFile}.log
        </file>
        <encoder>
            <pattern>%d [%thread] %-5level -[%file:%line]- %msg%n</pattern>
            <charset>
                UTF-8
            </charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${logFile}.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <maxFileSize>${maxFileSize}</maxFileSize>
        </rollingPolicy>

    </appender>

    <logger name="org.newcih" level="debug" additivity="true">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="info"/>
</configuration>